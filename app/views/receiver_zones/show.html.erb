<%- model_class = ReceiverZone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:zone) %>:</strong></dt>
  <dd><%= @receiver_zone.zone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_time_limit_id) %>:</strong></dt>
  <dd><%= @receiver_zone.country_time_limit.try :country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_postcode) %>:</strong></dt>
  <dd><%= @receiver_zone.try :start_postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_postcode) %>:</strong></dt>
  <dd><%= @receiver_zone.try :end_postcode %></dd>
</dl>
<% if can? :index, ReceiverZone %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              receiver_zones_path, :class => 'btn btn-default'  %>
<% end %>
<% if can? :update, @receiver_zone %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_receiver_zone_path(@receiver_zone), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @receiver_zone %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              receiver_zone_path(@receiver_zone),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
<% end %>
