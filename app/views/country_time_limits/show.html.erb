<%- model_class = CountryTimeLimit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @country_time_limit.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interchange1) %>:</strong></dt>
  <dd><%= @country_time_limit.try :interchange1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interchange2) %>:</strong></dt>
  <dd><%= @country_time_limit.try :interchange2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:air) %>:</strong></dt>
  <dd><%= @country_time_limit.try :air %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrive) %>:</strong></dt>
  <dd><%= @country_time_limit.try :arrive %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leave) %>:</strong></dt>
  <dd><%= @country_time_limit.try :leave %></dd>
</dl>
<% if can? :index, CountryTimeLimit %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              country_time_limits_path, :class => 'btn btn-default'  %>
<% end %>
<% if can? :update, @country_time_limit %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_country_time_limit_path(@country_time_limit), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @country_time_limit %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              country_time_limit_path(@country_time_limit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
<% end %>
