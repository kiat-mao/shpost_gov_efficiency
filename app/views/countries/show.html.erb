<%- model_class = Country -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @country.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interchange1) %>:</strong></dt>
  <dd><%= @country.try :interchange1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interchange2) %>:</strong></dt>
  <dd><%= @country.try :interchange2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:air) %>:</strong></dt>
  <dd><%= @country.try :air %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrive) %>:</strong></dt>
  <dd><%= @country.try :arrive %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leave) %>:</strong></dt>
  <dd><%= @country.try :leave %></dd>
</dl>
<% if can? :index, Country %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              countries_path, :class => 'btn btn-default'  %>
<% end %>
<% if can? :update, @country %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_country_path(@country), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @country %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              country_path(@country),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
<% end %>
