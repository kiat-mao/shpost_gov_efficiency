<%- model_class = Business -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @business.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @business.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:btype) %>:</strong></dt>
  <dd><%= @business.try :btype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:industry) %>:</strong></dt>
  <dd><%= @business.try :industry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_limit) %>:</strong></dt>
  <dd><%= @business.try :time_limit %></dd>
</dl>
<% if can? :index, Business %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              businesses_path, :class => 'btn btn-default'  %>
<% end %>
<% if can? :update, @business %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_path(@business), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @business %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_path(@business),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
<% end %>
