<%= form_for @business, :html => { :class => 'form-horizontal' } do |f| %>
  <% @business.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <font color="red">(必填)</font>
    <div class="controls">
      <%= f.text_field :code, :class => 'text_field', :id => 'code' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <font color="red">(必填)</font>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :id => 'name' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :btype, :class => 'control-label' %>
    <font color="red">(不填默认为‘其他‘)</font>
    <div class="controls">
      <%= f.text_field :btype, :class => 'text_field', :id => 'btype' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :industry, :class => 'control-label' %>
    <font color="red">(不填默认为‘其他‘)</font>
    <div class="controls">
      <%= f.text_field :industry, :class => 'text_field', :id => 'industry' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_limit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_limit, :class => 'text_field', :id => 'time_limit' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_init_expresses_midday, :class => 'control-label' %>
    <font color="red">(若无特殊需求请选否)</font>
    <div class="controls">
      <%= f.select(:is_init_expresses_midday, {"否":false, "是":true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_all_visible, :class => 'control-label' %>
    <font color="red">(若无特殊需求请选否)</font>
    <div class="controls">
      <%= f.select(:is_all_visible, {"否":false, "是":true}) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :static_alert, :class => 'control-label' %>
    <font color="red">(若无特殊需求请选否)</font>
    <div class="controls">
      <%= f.select(:static_alert, {"否":false, "是":true}) %>
    </div>
  </div>


 
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <% if can? :index, Business%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                businesses_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>